<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".view.ResumeActivity">

  <include layout="@layout/lib_layout_toolbar"/>

  <TextView
    android:id="@+id/tv_error"
    android:visibility="gone"
    android:layout_gravity="center"
    android:text="加载失败，点击重试"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

  <ScrollView
    android:id="@+id/sv_content"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
      android:layout_marginStart="10dp"
      android:layout_marginEnd="10dp"
      android:layout_marginTop="70dp"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
          android:id="@+id/iv_resume_head"
          android:layout_width="100dp"
          android:layout_height="100dp" />

        <EditText
          android:paddingStart="10dp"
          android:paddingEnd="10dp"
          android:enabled="false"
          android:id="@+id/et_resume_name"
          android:layout_marginStart="120dp"
          android:textSize="18sp"
          android:hint="姓名"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

        <EditText
          android:inputType="number"
          android:paddingStart="10dp"
          android:paddingEnd="10dp"
          android:enabled="false"
          android:id="@+id/et_resume_phone"
          android:hint="电话号码"
          android:layout_marginTop="50dp"
          android:layout_marginStart="120dp"
          android:textSize="18sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      </FrameLayout>

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
          android:layout_gravity="center_vertical"
          android:text="性别："
          android:textSize="18sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

        <EditText
          android:enabled="false"
          android:id="@+id/et_sex"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="60dp"
          android:maxLines="1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

      </FrameLayout>

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
          android:layout_gravity="center_vertical"
          android:text="身高："
          android:textSize="18sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

        <EditText
          android:inputType="number"
          android:enabled="false"
          android:id="@+id/et_height"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="60dp"
          android:maxLines="1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
      </FrameLayout>

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
          android:inputType="number"
          android:layout_gravity="center_vertical"
          android:text="年龄："
          android:textSize="18sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

        <EditText
          android:enabled="false"
          android:id="@+id/et_age"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="60dp"
          android:maxLines="1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
      </FrameLayout>

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
          android:layout_gravity="center_vertical"
          android:text="学校："
          android:textSize="18sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

        <EditText
          android:enabled="false"
          android:id="@+id/et_school"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="60dp"
          android:maxLines="1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
      </FrameLayout>

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
          android:layout_gravity="center_vertical"
          android:text="地址："
          android:textSize="18sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

        <EditText
          android:enabled="false"
          android:id="@+id/et_address"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="60dp"
          android:maxLines="1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
      </FrameLayout>

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
          android:layout_gravity="center_vertical"
          android:text="工作经验："
          android:textSize="18sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

        <EditText
          android:enabled="false"
          android:id="@+id/et_work_express"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="90dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
      </FrameLayout>

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
          android:layout_gravity="center_vertical"
          android:text="工作意向："
          android:textSize="18sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

        <EditText
          android:enabled="false"
          android:id="@+id/et_intent"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="90dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
      </FrameLayout>

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
          android:layout_gravity="center_vertical"
          android:text="自我介绍："
          android:textSize="18sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

        <EditText
          android:id="@+id/et_introduce"
          android:enabled="false"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="90dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
      </FrameLayout>

    </LinearLayout>

  </ScrollView>

</FrameLayout>