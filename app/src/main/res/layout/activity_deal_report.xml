<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  tools:context=".view.DealReportActivity"
  android:layout_height="match_parent"
  xmlns:tools="http://schemas.android.com/tools">

  <include layout="@layout/lib_layout_toolbar"/>


  <LinearLayout
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:paddingStart="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:textSize="15sp"
      android:textColor="@color/black"
      android:text="处理状态： "
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/tv_report_statue"
      android:textSize="15sp"
      android:layout_gravity="center_vertical"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

  </LinearLayout>


  <LinearLayout
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:paddingStart="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:textSize="15sp"
      android:textColor="@color/black"
      android:text="举报理由： "
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/tv_report_info"
      android:textSize="15sp"
      android:layout_gravity="center_vertical"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

  </LinearLayout>

  <LinearLayout
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:paddingStart="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:textSize="15sp"
      android:textColor="@color/black"
      android:text="被举报人： "
      android:layout_gravity="center_vertical"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/tv_see_resume"
      android:textSize="15sp"
      android:textColor="@color/blue"
      android:text="查看简历"
      android:layout_gravity="center_vertical"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

  </LinearLayout>

  <LinearLayout
    android:visibility="gone"
    android:id="@+id/ll_report_result"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:paddingStart="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:textSize="15sp"
      android:textColor="@color/black"
      android:text="处理结果： "
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/tv_report_result"
      android:textSize="15sp"
      android:layout_gravity="center_vertical"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

  </LinearLayout>

  <EditText
    android:id="@+id/et_report_deal"
    android:textSize="14sp"
    android:hint="请输入处理结果"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

  <FrameLayout
    android:id="@+id/fl_deal"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
      android:id="@+id/btn_pass"
      android:layout_marginStart="40dp"
      android:textColor="@color/white"
      android:text="有效"
      android:backgroundTint="@color/blue"
      android:layout_width="120dp"
      android:layout_height="wrap_content" />

    <Button
      android:id="@+id/btn_un_pass"
      android:layout_marginEnd="40dp"
      android:layout_gravity="end"
      android:textColor="@color/white"
      android:text="无效"
      android:backgroundTint="@color/red"
      android:layout_width="120dp"
      android:layout_height="wrap_content" />
  </FrameLayout>


</LinearLayout>